@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<div class="container my-5">
    <div class="text-center mb-4">
        <h1 class="fw-bold text-success">MANAGE YOUR ACCOUNT</h1>
        <p class="text-muted fs-5">Update your account settings</p>
    </div>

    <div class="row justify-content-center">
        <!-- Sidebar Navigation -->
        <div class="col-md-4 col-lg-3 mb-4">
            <div class="p-3 rounded shadow-sm  bg-white border-success">
                <partial name="_ManageNav" />
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-8 col-lg-7">
            <div class="p-4 rounded shadow-lg bg-white border">
                @RenderBody()
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}

