            color: #06CF9C !important;
            transform: translateY(-2px);
        }

    .cart-badge {
        position: absolute;
        top: -17px;
        right: 8px;
        background: #0094ff;
        color: white;
        font-size: 8px;
        font-weight: bold;
        border-radius: 50%;
        padding: 5px 6px;
        min-width: 20px;
        text-align: center;
        stroke-opacity: 90%;
    }

    /* Mobile Menu Customization */
    .navbar-toggler {
        border: none;
        outline: none;
    }

        .navbar-toggler:focus {
            box-shadow: none;
        }

</style>

