@model Product

@{
    ViewData["Title"] = "Create Product";
}

<div class="container py-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width: 700px; background: linear-gradient(to bottom, #ffffff, #f8f9fa);">
        <h2 class="text-center mb-4 fw-bold text-success">🛒 Add New Product</h2>
        <hr class="mb-4" />

        <div class="row justify-content-center">
            <div class="col-md-12">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <!-- Product Name -->
                    <div class="form-floating mb-3">
                        <input asp-for="Name" class="form-control shadow-sm rounded-3 border-0" placeholder="e.g. Hp Elitebook 850 G5" />
                        <label asp-for="Name" class="fw-bold"><i class="bi bi-tag"></i>Product Name </label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <!-- Product Description -->
                    <div class="form-floating mb-3">
                        <textarea asp-for="Description" class="form-control shadow-sm rounded-3 border-0" placeholder="e.g. 8-GB Ram 256-GB SSD ..." style="height: 100px;"></textarea>
                        <label asp-for="Description" class="fw-bold"><i class="bi bi-card-text"></i> Description </label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <!-- Price & Quantity -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-floating">
                                <input asp-for="Price" type="number" step="0.01" class="form-control shadow-sm rounded-3 border-0" placeholder="50000" />
                                <label asp-for="Price" class="fw-bold"><i class="bi bi-currency-dollar"></i> Price</label>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-floating">
                                <input asp-for="Quantity" type="number" step="1" class="form-control shadow-sm rounded-3 border-0" placeholder="100" />
                                <label asp-for="Quantity" class="fw-bold"><i class="bi bi-box"></i> Quantity</label>
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Product Image -->
                    <div class="mb-3">
                        <label asp-for="ImageFile" class="form-label fw-bold"><i class="bi bi-image"></i> Image</label>
                        <input asp-for="ImageFile" type="file" class="form-control shadow-sm rounded-3 border-0" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>

                    <!-- Category -->
                    <div class="form-floating mb-3">
                        <select asp-for="CategoryId" class="form-select shadow-sm rounded-3 border-0" asp-items="ViewBag.CategoryId">
                            <option value="">Select Category</option>
                        </select>
                        <label asp-for="CategoryId" class="fw-bold"><i class="bi bi-tags"></i> </label>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 rounded-3"><i class="bi bi-arrow-left"></i> Back</a>
                        <button type="submit" class="btn btn-success px-4 py-2 rounded-3 shadow-sm"><i class="bi bi-check-circle-fill"></i> Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
